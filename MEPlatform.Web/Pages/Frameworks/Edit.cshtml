@page "{id:int?}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SuperAdministrator,Supervisor")]
@model MEPlatform.Web.Pages.Frameworks.EditModel
@{
    ViewData["Title"] = "Edit Framework";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="@Url.Page("/Dashboard/Index")">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Page("./Index")">Frameworks</a></li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-0"><i class="bi bi-pencil me-2"></i>Edit Framework</h1>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Page("./Details", new { id = Model.Framework.Id })" class="btn btn-outline-info">
                        <i class="bi bi-eye"></i> View Details
                    </a>
                    <a href="@Url.Page("./Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Frameworks
                    </a>
                </div>
            </div>

            <!-- Main Form -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-diagram-3 me-2"></i>@Model.Framework.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <input type="hidden" asp-for="Framework.Id" />
                                
                                <!-- Name -->
                                <div class="mb-4">
                                    <label asp-for="Framework.Name" class="form-label fw-bold">
                                        Framework Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Framework.Name" class="form-control" />
                                    <span asp-validation-for="Framework.Name" class="text-danger"></span>
                                    <div class="form-text">A descriptive name for your M&E framework</div>
                                </div>

                                <!-- Description -->
                                <div class="mb-4">
                                    <label asp-for="Framework.Description" class="form-label fw-bold">
                                        Description
                                    </label>
                                    <textarea asp-for="Framework.Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Framework.Description" class="text-danger"></span>
                                    <div class="form-text">Explain the framework's purpose, scope, and objectives</div>
                                </div>

                                <!-- Framework Type -->
                                <div class="mb-4">
                                    <label asp-for="Framework.Type" class="form-label fw-bold">
                                        Framework Type <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Framework.Type" class="form-select">
                                        <option value="">Select framework type...</option>
                                        <option value="SNDV">SNDV - Syria National Development Vision</option>
                                        <option value="Programs">Programs - Program Management Framework</option>
                                        <option value="SDG">SDG - Sustainable Development Goals</option>
                                        <option value="Custom">Custom - Custom Framework</option>
                                    </select>
                                    <span asp-validation-for="Framework.Type" class="text-danger"></span>
                                    <div class="form-text">Choose the type that best describes your framework</div>
                                </div>

                                <!-- Weight -->
                                <div class="mb-4">
                                    <label asp-for="Framework.Weight" class="form-label fw-bold">
                                        Weight
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Framework.Weight" type="number" step="0.01" min="0" max="100" 
                                               class="form-control" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="Framework.Weight" class="text-danger"></span>
                                    <div class="form-text">Relative importance of this framework (0-100%)</div>
                                </div>

                                <!-- Icon -->
                                <div class="mb-4">
                                    <label asp-for="Framework.Icon" class="form-label fw-bold">
                                        Icon
                                    </label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input asp-for="Framework.Icon" class="form-control" 
                                                   placeholder="Bootstrap icon name (e.g., diagram-3)" />
                                            <span asp-validation-for="Framework.Icon" class="text-danger"></span>
                                            <div class="form-text">Bootstrap icon name without 'bi-' prefix</div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card bg-light h-100 d-flex align-items-center justify-content-center">
                                                <div class="text-center">
                                                    <i id="icon-preview" class="bi" style="font-size: 2rem;"></i>
                                                    <div class="small text-muted mt-2">Icon Preview</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Status -->
                                <div class="mb-4">
                                    <div class="form-check form-switch">
                                        <input asp-for="Framework.IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="Framework.IsActive" class="form-check-label fw-bold">
                                            Framework is Active
                                        </label>
                                    </div>
                                    <div class="form-text">Active frameworks can be used for project alignment and monitoring</div>
                                </div>

                                <!-- Metadata -->
                                <div class="mb-4">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Elements</div>
                                                    <div class="fw-bold">@Model.Framework.ElementsCount</div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Indicators</div>
                                                    <div class="fw-bold">@Model.Framework.IndicatorsCount</div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Projects</div>
                                                    <div class="fw-bold">@Model.Framework.ProjectsCount</div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Created</div>
                                                    <div class="fw-bold">@Model.Framework.CreatedAt.ToString("MMM yyyy")</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="d-flex gap-2 pt-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle me-1"></i>Update Framework
                                    </button>
                                    <a href="@Url.Page("./Details", new { id = Model.Framework.Id })" class="btn btn-outline-info">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </a>
                                    <a href="@Url.Page("./Index")" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Actions Panel -->
                <div class="col-lg-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>Framework Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="small fw-bold">Structure Management:</h6>
                                <div class="d-grid gap-2">
                                    <a href="#" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-diagram-2 me-1"></i>Manage Elements
                                    </a>
                                    <a href="#" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-speedometer2 me-1"></i>Manage Indicators
                                    </a>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <h6 class="small fw-bold">Project Management:</h6>
                                <div class="d-grid gap-2">
                                    <a href="@Url.Page("/Monitoring/Projects", new { frameworkId = Model.Framework.Id })" 
                                       class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-kanban me-1"></i>View Aligned Projects
                                    </a>
                                </div>
                            </div>

                            <hr>

                            <div>
                                <h6 class="small fw-bold text-danger">Danger Zone:</h6>
                                <button type="button" class="btn btn-outline-danger btn-sm w-100" 
                                        data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash me-1"></i>Delete Framework
                                </button>
                                <div class="form-text">
                                    This action cannot be undone and will affect all aligned projects.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Help Panel -->
                    <div class="card border-0 bg-light mt-3">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-info-circle me-2"></i>Editing Tips
                            </h6>
                            
                            <ul class="list-unstyled small">
                                <li class="mb-1"><i class="bi bi-check text-success me-2"></i>Changes affect all aligned projects</li>
                                <li class="mb-1"><i class="bi bi-check text-success me-2"></i>Deactivating stops new alignments</li>
                                <li class="mb-1"><i class="bi bi-check text-success me-2"></i>Weight affects reporting calculations</li>
                                <li class="mb-1"><i class="bi bi-check text-success me-2"></i>Icon changes appear across the platform</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-danger">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Framework
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    Are you sure you want to delete the framework <strong>"@Model.Framework.Name"</strong>?
                </p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone and will:
                    <ul class="mb-0 mt-2">
                        <li>Remove all framework elements and indicators</li>
                        <li>Break alignment with @Model.Framework.ProjectsCount project(s)</li>
                        <li>Delete all associated monitoring data</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" asp-for="Framework.Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Yes, Delete Framework
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Icon preview functionality
        document.addEventListener('DOMContentLoaded', function() {
            const iconInput = document.getElementById('Framework_Icon');
            const iconPreview = document.getElementById('icon-preview');
            
            function updateIconPreview() {
                const iconName = iconInput.value.trim();
                if (iconName) {
                    iconPreview.className = `bi bi-${iconName}`;
                } else {
                    iconPreview.className = 'bi bi-diagram-3';
                }
            }
            
            iconInput.addEventListener('input', updateIconPreview);
            updateIconPreview(); // Initialize
        });
    </script>
}