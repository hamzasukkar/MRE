@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model MEPlatform.Web.Pages.Frameworks.IndexModel
@{
    ViewData["Title"] = "Frameworks";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><i class="bi bi-diagram-3 me-2"></i>M&E Frameworks</h1>
    <div>
        @if (User.IsInRole("SuperAdministrator") || User.IsInRole("Supervisor"))
        {
            <a href="@Url.Page("./Create")" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create Framework
            </a>
        }
    </div>
</div>

<!-- Framework Cards -->
<div class="row">
    @foreach (var framework in Model.Frameworks)
    {
        <div class="col-lg-6 col-xl-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@framework.Name</h5>
                    <span class="badge @(framework.IsActive ? "bg-success" : "bg-secondary")">
                        @(framework.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
                <div class="card-body">
                    <p class="text-muted">@framework.Description</p>
                    
                    <!-- Framework Type -->
                    <div class="mb-3">
                        <span class="badge bg-primary">@framework.Type</span>
                    </div>

                    <!-- Key Statistics -->
                    <div class="row text-center mb-3">
                        <div class="col-4">
                            <div class="border-end">
                                <h6 class="text-primary mb-0">@framework.ElementsCount</h6>
                                <small class="text-muted">Elements</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border-end">
                                <h6 class="text-success mb-0">@framework.IndicatorsCount</h6>
                                <small class="text-muted">Indicators</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <h6 class="text-info mb-0">@framework.ProjectsCount</h6>
                            <small class="text-muted">Projects</small>
                        </div>
                    </div>

                    <!-- Progress Overview -->
                    @if (framework.OverallProgress.HasValue)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">Overall Progress</small>
                                <small class="fw-bold">@framework.OverallProgress.Value.ToString("F1")%</small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @(framework.OverallProgress.Value >= 75 ? "bg-success" : framework.OverallProgress.Value >= 50 ? "bg-warning" : "bg-danger")" 
                                     role="progressbar" 
                                     style="width: @framework.OverallProgress.Value%">
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Framework Hierarchy Preview -->
                    @if (framework.TopLevelElements.Any())
                    {
                        <div class="mb-3">
                            <h6 class="text-muted small mb-2">FRAMEWORK STRUCTURE</h6>
                            <div class="framework-preview">
                                @foreach (var element in framework.TopLevelElements.Take(3))
                                {
                                    <div class="small text-truncate mb-1">
                                        <i class="bi bi-arrow-right text-muted me-1"></i>
                                        @element
                                    </div>
                                }
                                @if (framework.TopLevelElements.Count > 3)
                                {
                                    <div class="small text-muted">
                                        <i class="bi bi-three-dots"></i> and @(framework.TopLevelElements.Count - 3) more
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <small class="text-muted">
                        <i class="bi bi-calendar me-1"></i>
                        Created: @framework.CreatedAt.ToString("MMM dd, yyyy")
                    </small>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex gap-2">
                        <a href="@Url.Page("./Details", new { id = framework.Id })" 
                           class="btn btn-outline-primary btn-sm flex-fill">
                            <i class="bi bi-eye me-1"></i>Details
                        </a>
                        <a href="@Url.Page("/Monitoring/Projects", new { frameworkId = framework.Id })" 
                           class="btn btn-outline-info btn-sm flex-fill">
                            <i class="bi bi-kanban me-1"></i>Projects
                        </a>
                        @if (User.IsInRole("SuperAdministrator") || User.IsInRole("Supervisor"))
                        {
                            <a href="@Url.Page("./Edit", new { id = framework.Id })" 
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Frameworks.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-diagram-3" style="font-size: 4rem; color: #ccc;"></i>
        <h4 class="mt-3 text-muted">No frameworks found</h4>
        <p class="text-muted">Get started by creating your first M&E framework.</p>
        @if (User.IsInRole("SuperAdministrator") || User.IsInRole("Supervisor"))
        {
            <a href="@Url.Page("./Create")" class="btn btn-primary mt-3">
                <i class="bi bi-plus"></i> Create Your First Framework
            </a>
        }
    </div>
}

<!-- Framework Types Legend -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">Framework Types</h6>
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-primary me-2">SNDV</span>
                        <small>Syria National Development Vision</small>
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-success me-2">Programs</span>
                        <small>Program Management Framework</small>
                    </div>
                    <div class="col-md-4 mb-2">
                        <span class="badge bg-info me-2">SDG</span>
                        <small>Sustainable Development Goals</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>