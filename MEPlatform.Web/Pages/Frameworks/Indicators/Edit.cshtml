@page "{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SuperAdministrator,Supervisor")]
@model MEPlatform.Web.Pages.Frameworks.Indicators.EditModel
@{
    ViewData["Title"] = $"Edit {Model.Indicator.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a href="@Url.Page("/Dashboard/Index")">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Page("../Index")">Frameworks</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Page("../Elements/Index", new { frameworkId = Model.Element?.FrameworkId })">@Model.Framework?.Name</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Page("./Index", new { elementId = Model.Element?.Id })">Indicators</a></li>
                            <li class="breadcrumb-item active">Edit Indicator</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-0">
                        <i class="bi bi-pencil me-2"></i>Edit Indicator
                    </h1>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Page("./Index", new { elementId = Model.Element?.Id })" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Indicators
                    </a>
                </div>
            </div>

            <!-- Main Form -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-speedometer2 me-2"></i>@Model.Indicator.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <input type="hidden" asp-for="Indicator.Id" />
                                <input type="hidden" asp-for="Indicator.ElementId" />

                                <!-- Name -->
                                <div class="mb-4">
                                    <label asp-for="Indicator.Name" class="form-label fw-bold">
                                        Indicator Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Indicator.Name" class="form-control" />
                                    <span asp-validation-for="Indicator.Name" class="text-danger"></span>
                                    <div class="form-text">A clear, specific name describing what is being measured</div>
                                </div>

                                <!-- Description -->
                                <div class="mb-4">
                                    <label asp-for="Indicator.Description" class="form-label fw-bold">
                                        Description
                                    </label>
                                    <textarea asp-for="Indicator.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Indicator.Description" class="text-danger"></span>
                                    <div class="form-text">Explain what this indicator measures and its purpose</div>
                                </div>

                                <!-- Measurement Details -->
                                <div class="row mb-4">
                                    <div class="col-md-4">
                                        <label asp-for="Indicator.Unit" class="form-label fw-bold">
                                            Unit of Measurement
                                        </label>
                                        <input asp-for="Indicator.Unit" class="form-control" placeholder="e.g., %, km, people" />
                                        <span asp-validation-for="Indicator.Unit" class="text-danger"></span>
                                        <div class="form-text">Unit symbol or name</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Indicator.Target" class="form-label fw-bold">
                                            Target Value
                                        </label>
                                        <input asp-for="Indicator.Target" type="number" step="0.01" class="form-control" />
                                        <span asp-validation-for="Indicator.Target" class="text-danger"></span>
                                        <div class="form-text">Goal to achieve</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Indicator.Baseline" class="form-label fw-bold">
                                            Baseline Value
                                        </label>
                                        <input asp-for="Indicator.Baseline" type="number" step="0.01" class="form-control" />
                                        <span asp-validation-for="Indicator.Baseline" class="text-danger"></span>
                                        <div class="form-text">Starting point value</div>
                                    </div>
                                </div>

                                <!-- Measurement Frequency -->
                                <div class="mb-4">
                                    <label asp-for="Indicator.MeasurementFrequency" class="form-label fw-bold">
                                        Measurement Frequency
                                    </label>
                                    <select asp-for="Indicator.MeasurementFrequency" class="form-select">
                                        <option value="">Select frequency...</option>
                                        <option value="Weekly">Weekly</option>
                                        <option value="Monthly">Monthly</option>
                                        <option value="Quarterly">Quarterly</option>
                                        <option value="Semi-Annual">Semi-Annual</option>
                                        <option value="Annual">Annual</option>
                                        <option value="Ad-hoc">Ad-hoc</option>
                                    </select>
                                    <span asp-validation-for="Indicator.MeasurementFrequency" class="text-danger"></span>
                                    <div class="form-text">How often will this indicator be measured?</div>
                                </div>

                                <!-- Data Source -->
                                <div class="mb-4">
                                    <label asp-for="Indicator.DataSource" class="form-label fw-bold">
                                        Data Source
                                    </label>
                                    <input asp-for="Indicator.DataSource" class="form-control" 
                                           placeholder="e.g., Monthly reports, Surveys, System records" />
                                    <span asp-validation-for="Indicator.DataSource" class="text-danger"></span>
                                    <div class="form-text">Where will the data come from?</div>
                                </div>

                                <!-- Responsible Party -->
                                <div class="mb-4">
                                    <label asp-for="Indicator.ResponsibleParty" class="form-label fw-bold">
                                        Responsible Party
                                    </label>
                                    <input asp-for="Indicator.ResponsibleParty" class="form-control" 
                                           placeholder="Person or team responsible for data collection" />
                                    <span asp-validation-for="Indicator.ResponsibleParty" class="text-danger"></span>
                                    <div class="form-text">Who is responsible for collecting this data?</div>
                                </div>

                                <!-- Performance Metrics -->
                                <div class="mb-4">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title">Performance Overview</h6>
                                            <div class="row text-center">
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Current Value</div>
                                                    <div class="fw-bold">
                                                        @(Model.Indicator.CurrentValue?.ToString("N1") ?? "N/A")
                                                        @if (!string.IsNullOrEmpty(Model.Indicator.Unit)) { <small class="text-muted">@Model.Indicator.Unit</small> }
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Target</div>
                                                    <div class="fw-bold">
                                                        @(Model.Indicator.Target?.ToString("N1") ?? "N/A")
                                                        @if (!string.IsNullOrEmpty(Model.Indicator.Unit)) { <small class="text-muted">@Model.Indicator.Unit</small> }
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Progress</div>
                                                    @if (Model.Indicator.Target.HasValue && Model.Indicator.CurrentValue.HasValue)
                                                    {
                                                        var progress = Math.Min((Model.Indicator.CurrentValue.Value / Model.Indicator.Target.Value) * 100, 100);
                                                        <div class="fw-bold">@progress.ToString("F1")%</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="fw-bold">N/A</div>
                                                    }
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="text-muted small">Measurements</div>
                                                    <div class="fw-bold">@Model.Indicator.MeasurementsCount</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="d-flex gap-2 pt-3">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle me-1"></i>Update Indicator
                                    </button>
                                    <a href="@Url.Page("./Index", new { elementId = Model.Element?.Id })" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Actions Panel -->
                <div class="col-lg-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0">
                                <i class="bi bi-tools me-2"></i>Indicator Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="small fw-bold">Data Management:</h6>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-plus me-1"></i>Add Measurement
                                    </button>
                                    <button class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-graph-up me-1"></i>View Data History
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-download me-1"></i>Export Data
                                    </button>
                                </div>
                            </div>

                            <hr>

                            <div>
                                <h6 class="small fw-bold text-danger">Danger Zone:</h6>
                                <button type="button" class="btn btn-outline-danger btn-sm w-100" 
                                        data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash me-1"></i>Delete Indicator
                                </button>
                                <div class="form-text">
                                    This will delete all measurement data.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Context Card -->
                    <div class="card border-primary mt-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">Context</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <strong>Framework:</strong> @Model.Framework?.Name
                            </div>
                            <div class="mb-2">
                                <strong>Element:</strong> @Model.Element?.Name
                            </div>
                            <div class="mb-2">
                                <strong>Type:</strong> <span class="badge bg-@(GetElementColorClass(Model.Element?.Type))">@Model.Element?.Type</span>
                            </div>
                            <div class="mb-0">
                                <strong>Created:</strong> @Model.Indicator.CreatedAt.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-danger">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Indicator
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">
                    Are you sure you want to delete indicator <strong>"@Model.Indicator.Name"</strong>?
                </p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action will also delete:
                    <ul class="mb-0 mt-2">
                        <li>@Model.Indicator.MeasurementsCount measurement record(s)</li>
                        <li>All associated historical data</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="Delete">
                    <input type="hidden" asp-for="Indicator.Id" />
                    <input type="hidden" asp-for="Indicator.ElementId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Yes, Delete Indicator
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@functions {
    string GetElementColorClass(string? elementType) => elementType switch
    {
        "Outcome" => "primary",
        "Output" => "success",
        "SubOutput" => "info",
        _ => "secondary"
    };
}